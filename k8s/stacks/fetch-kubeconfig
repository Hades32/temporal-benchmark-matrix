#!/bin/bash

set -e

export KUBECONFIG=`mktemp -q /tmp/kubecconfig.XXXXXX`

pulumi stack -s "$1" output kubeconfig --json | jq -c 'fromjson' > ${KUBECONFIG}

if [ -n "$2" ]; then
    aws eks update-kubeconfig --name $(pulumi stack -s "$1" output cluster-name) --role-arn "$2"
fi

echo "export KUBECONFIG=${KUBECONFIG}"
